<!DOCTYPE html>
@* This is the main website *@
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/vue.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top nav">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @* home button *@
                @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse" >
                <ul class="nav navbar-nav">
                    @* about button *@
                    @*<li>@Html.ActionLink("About", "About", "Home", new { area = "" })</li>*@
                    <li>
                        @*calls the index.cshtml inside the manage folder?*@
                        <a href="@Url.Action("About", "Home", new {area = ""})">
                            About
                        </a>
                    </li>
                    @* contact button *@
                    @*<li>@Html.ActionLink("Contact", "Contact", "Home", new { area = "" })</li>*@
                    <li>
                        @*calls the index.cshtml inside the manage folder?*@
                        <a href="@Url.Action("Contact", "Home", new {area = ""})">
                            Contact
                        </a>
                    </li>
                    @* quote button *@
                    @*<li>@Html.ActionLink("Quote", "Quote", "Home", new { area = "" })</li>*@
                    <li>
                        @*calls the index.cshtml inside the manage folder?*@
                        <a href="@Url.Action("Quote", "Home", new {area = ""})">
                            Quote
                        </a>
                    </li>
                </ul>
                @* register/manage button and login/logout button *@
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    @* the body content, I'm assuming @renderbody is some kind of comtainer/object that is manipulated to hold the content of the moment *@
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @RenderSection("scripts", required: false)
</body>
</html>
