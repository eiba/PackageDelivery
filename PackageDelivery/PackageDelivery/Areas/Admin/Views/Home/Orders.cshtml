        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReadyForPickupTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WareHouseArrivalTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderStatus)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PaymentType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderPriority)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WareHouseDepartureTime)
        </th>
